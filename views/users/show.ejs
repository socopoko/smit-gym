<!-- ADMIN ONLY -->
<%- include('../partials/header') %>
<%- include ('../partials/messages') %>

<div class="container">
    <div class="row align-items-center mt-4">
        <div class="col-auto">
            <h1 class="display-4">All Users</h1>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-auto mt-2">
            <div class="card shadow-sm bg-body rounded m-2 p-0" >
                <div class="card-body">
                    <form class="row" action="/users" method="GET">
                        <div class="col">
                            <input class="form-control" type="text" name="name" value="<%= searchOptions.name %>" placeholder="Name">
                        </div>
                        <div class="col">
                            <input class="form-control" type="text" name="email" value="<%= searchOptions.email %>" placeholder="Email">
                        </div>
                        <div class="col-auto">
                            <button class="btn btn-dark" type="submit">Search</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center mt-4">
        <% for (let user of users) { %> 
            <div class="col col-auto mb-4">
                <div class="card shadow-sm bg-body rounded p-2 pb-0" style="min-width: 18rem;">
                    <div class="card-body">
                        <h3 class="card-title"><%= user.name %></h3>
                        <p class="card-subtitle"><%= user.email %></p>
                        <p class="card-text">
                            <div class="row btn-group">
                                <a class="col-auto btn btn-sm btn-outline-dark" href="/users/<%= user.id %>/subscription">Subscription</a>
                                <a class="col-auto btn btn-sm btn-outline-dark"  href="/users/<%= user.id %>/details">Details</a>
                                <a class="col-auto btn btn-sm btn-outline-dark"   href="/users/<%= user.id %>/advices/new">Give Advice</a>
                                <a class="col-auto btn btn-sm btn-outline-dark"  href="/users/<%= user.id %>/advices">Past Advices</a>
                            </div>
                        </p>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</div>