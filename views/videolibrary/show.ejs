<%- include('../partials/header') %>
<%- include ('../partials/messages') %>

<div class="container">
    <div class="row  align-items-center mt-4 mb-4">
        <div class="col-auto">
            <h1 class="display-4">Video Library</h1>
        </div>
    </div>

    <div class="row mb-4 justify-content-center align-items-center">
        <div class="col-auto">
            <div class="card shadow-sm bg-body rounded p-3" >
                    <form action="/videolibrary" method="GET">
                    <div class="row">
                        <div class="col-auto">
                            <input class="form-control" placeholder="Search workouts..." type="text" name="title" value="<%= searchOptions.title %>">
                        </div>
                        <div class="col-auto">
                            <button type="submit" class="btn btn-primary">Search</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="row">
        <% for(let video of videos) { %> 
            <div class="col col-xs-12 col-md-4 mb-4">
                <div class="card shadow-sm bg-body rounded p-3" style="min-width: 18rem;">
                    <iframe height="180rem" class="card-img-top" src="<%= video.url %>" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                    <div class="card-body">
                        <h5 class="card-title"><%= video.title %></h5>
                        <p class="card-text" style="height: 6rem; overflow: scroll;"><%= video.description %></p>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</div>
