<%- include('../partials/header') %>
<%- include ('../partials/messages') %>

<div class="container">
    <div class="card shadow-lg p-3 mb-5 bg-body rounded " style="width: 20rem; margin: 10vh auto;">
        <div class="row justify-content-center align-items-center mt-3">
            <div class="col-auto">
                <h1 class="card-title">Send Details</h1>
            </div>
       </div>

       <div class="row justify-content-center align-items-center">
           <div class="col-auto">
                <form action="/details/new" method="POST">
                    <div class="mt-2">
                        <label class="form-label" for="bmi">BMI </label>
                        <input class="form-control" type="number" name="bmi" id="bmi" placeholder="Enter BMI">
                    </div>
                    <div class="mt-2">
                        <label class="form-label" for="goals">Goals </label>
                        <textarea class="form-control" name="goals" id="goals" cols="30" rows="5" placeholder="Describe your goals ..."></textarea>
                    </div>
                    <div class="mt-2">
                        <label class="form-label" for="others">Others</label>
                        <textarea class="form-control" name="others" id="others" cols="30" rows="5" placeholder="Anything else you would like to tell you trainer?"></textarea>
                    </div>
                    <button class="btn btn-primary mt-4" type="submit">Submit</button>
                </form>
           </div>
       </div> 
    </div>   
</div>